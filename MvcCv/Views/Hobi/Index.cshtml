@model List<MvcCv.Models.Entity.Tbl_Hobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4>Hobi Düzenleme Sayfası</h4>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama1</label>
        <textarea rows="5" class="form-control" name="Aciklama1">@item.Aciklama1</textarea>

        <label>Açıklama2</label>
        <textarea rows="5" class="form-control" name="Aciklama2">@item.Aciklama2</textarea>
    }
    <br />
    <button class="btn btn-outline-info"><i class="fa fa-sync"></i>Güncelle</button>
</form>