@model List<MvcCv.Models.Entity.Tbl_iletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var item in Model)
                                        {


                                        <div class="time-label">
                                            <span class="bg-gradient-purple">
                                               @(((DateTime)item.Tarih).ToString("dd-MMMM-yyyy"))
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> 27 mins ago</span>
                                                <h3 class="timeline-header"><a href="#">@item.AdSoyad</a></h3>
                                                <h5 style="color: black; text-decoration: underline;margin-left:10px;">@item.Konu</h5>
                                                <div class="timeline-body">
                                                @item.Mesaj
                                                </div>
                                                <a href="/iletisim/Deleteiletisim/@item.ID" style="width:100px;"class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                                      
                                            </div>
                                        </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
    </section>
</body>
</html>