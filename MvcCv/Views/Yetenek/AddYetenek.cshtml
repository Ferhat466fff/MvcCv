@model MvcCv.Models.Entity.Tbl_Yetenekler
@{
    ViewBag.Title = "AddYetenek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Yetenek Ekleme Sayfası</h4>
<br />
<form method="post" class="form-group">

    @Html.TextBoxFor(x => x.Yetenek, new { @class = "form-control", @placeholder = "Yeteneğinizi Giriniz" })
    @Html.ValidationMessageFor(x => x.Yetenek, "", new { @style = "color:red" })
    <br />

    @Html.TextBoxFor(x => x.Oran, new { @class = "form-control", @placeholder = "Derecenizi Giriniz" })
    @Html.ValidationMessageFor(x => x.Oran, "", new { @style = "color:red" })
    <br />

    <button class="btn btn-outline-success"><i class="fas fa-save"></i>Kaydet</button>
</form>

